{{#if categories}}
  {{#if filteredCategories}}
    <ul
      class="category-list {{if showTopics 'with-topics'}}"
      aria-labelledby="categories-only-category"
    >
      {{#each categories as |category|}}
        {{parent-category-row category=category showTopics=showTopics}}
      {{/each}}
    </ul>
  {{/if}}

  {{#if mutedCategories}}
    <div class="muted-categories">
      <a href class="muted-categories-link" {{action "toggleShowMuted"}}>
        <h3 class="muted-categories-heading">{{i18n "categories.muted"}}</h3>
        {{#if mutedToggleIcon}}
          {{d-icon mutedToggleIcon}}
        {{/if}}
      </a>
      <ul
        class="category-list
          {{if showTopics 'with-topics'}}
          {{unless showMutedCategories 'hidden'}}"
      >
        {{#each categories as |category|}}
          {{parent-category-row
            category=category
            showTopics=showTopics
            listType="muted"
          }}
        {{/each}}
      </ul>
    </div>
  {{/if}}
{{/if}}

{{plugin-outlet
  name="below-categories-only"
  tagName=""
  connectorTagName="div"
  args=(hash categories=categories showTopics=showTopics)
}}